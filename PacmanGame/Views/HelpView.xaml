<UserControl x:Class="PacmanGame.Views.HelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PacmanGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource PanelStyle}">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Pomoc" Grid.Row="0" Style="{StaticResource HighscoresHeaderStyle}"/>
        <Button Content="Powrót" Command="{Binding ReturnCommand}" Grid.Row="2" Style="{StaticResource StartMenuButtonStyle}"/>
        <Grid Grid.Row="1">
            
        </Grid>
    </Grid>
</UserControl>
